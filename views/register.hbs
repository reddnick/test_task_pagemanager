<!DOCTYPE html>
<head>
	<title></title>
	<meta charset="utf-8"/>
</head>
<body>
<div>
	<h1 class="display-4">Registration</h1>
	<form  id="register" name="register" method="post" action="/security/register">
		{{# if error }}
			<p class="alert alert-danger">{{ this.error }}</p>
		{{/if}}
		<div class="form-group">
			<label for="username" >Username</label>
			{{# if username }}
				<input class="form-control" name="username" id="username" type="username" value="{{this.username}}">
			{{else}}
			<input class="form-control" name="username" id="username" type="username">
			{{/if}}
		</div>
		<div class="form-group">
			<label for="password">Password</label>
			<input class="form-control" name="password" id="password" type="password">
		</div>
		<button type="submit" class="btn btn-primary">Register</button>
	</form>
</div>
</body>
